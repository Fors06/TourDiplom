<Page x:Class="Diplom.View.Admin.The_common_window.Pages.ToursPageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local1="clr-namespace:Diplom.Model.Entity"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToursPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Green.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="5" Style="{DynamicResource GridPageStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Панель инструментов -->
            <RowDefinition Height="Auto"/>
            <!-- Поиск и фильтрация -->
            <RowDefinition Height="79*"/>
            <!-- Таблица туров -->
            <RowDefinition Height="Auto"/>
            <!-- Поля ввода -->
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2" Grid.Row="0">
            <Button Style="{StaticResource ButtonStyle}" Command="{Binding AddCommand}" Content="Добавить тур" Margin="5" FontSize="16"/>
            <Button Style="{StaticResource ButtonStyle}" Command="{Binding EditCommand}" Content="Редактировать тур" Margin="5" FontSize="16"/>
            <Button Style="{StaticResource ButtonStyle}" Command="{Binding DeleteTourCommand}" Content="Удалить тур" Margin="5" FontSize="16"/>
            <Button Style="{StaticResource ButtonStyle}" Command="{Binding ClearFieldsCommand}" Content="Очистить поля" Margin="5" FontSize="16"/>
        </StackPanel>

        <!-- Поиск и фильтр -->
        <TextBox Style="{StaticResource MaterialDesignTextBox}"
                 Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="10,4,6,10"
                 Foreground="White" BorderBrush="White"
                 materialDesign:HintAssist.Hint="Поиск..."
                 FontSize="16" Grid.ColumnSpan="2" Grid.Row="1"/>

        <!-- Таблица туров -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Tours}" SelectedItem="{Binding SelectedTour}"
                 AutoGenerateColumns="False" Margin="5,10,1,10" FontSize="16"
                 CanUserAddRows="False" SelectionMode="Single" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Описание}" Width="*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Цена}" Width="*"/>
                <DataGridTextColumn Header="Длительность (дни)" Binding="{Binding ДлительностьДней}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Поля ввода -->
        <Grid Grid.Row="3" Margin="5,8,5,5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="149*"/>
                <ColumnDefinition Width="93*"/>
                <ColumnDefinition Width="538*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80.406"/>
                <RowDefinition Height="55.306"/>
            </Grid.RowDefinitions>

            <TextBox Style="{StaticResource MaterialDesignTextBox}" Text="{Binding Название, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     materialDesign:HintAssist.Hint="Название..." Foreground="White" BorderBrush="White" Margin="5,0,0,0"
                     FontSize="16" Height="40" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

            <TextBox Style="{StaticResource MaterialDesignTextBox}" Text="{Binding Описание, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     materialDesign:HintAssist.Hint="Описание..." Foreground="White" BorderBrush="White" Margin="5,0,5,0"
                     FontSize="16" Grid.Column="2" Height="40" VerticalAlignment="Center" />

            <TextBox x:Name="CostTextBox" Style="{StaticResource MaterialDesignTextBox}" 
                     Text="{Binding Цена, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     materialDesign:HintAssist.Hint="Цена..." Foreground="White" BorderBrush="White"
                     FontSize="16" HorizontalAlignment="Left" Width="198" Height="38" VerticalAlignment="Center" Margin="330,0,0,0" Grid.Row="1" Grid.Column="2"/>

            <TextBox x:Name="DurationTextBox" Style="{StaticResource MaterialDesignTextBox}" 
                     Text="{Binding ДлительностьДней, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     materialDesign:HintAssist.Hint="Длительность (дни)..." Foreground="White" BorderBrush="White"
                     FontSize="16" HorizontalAlignment="Left" Width="198" Height="38" VerticalAlignment="Top" Margin="0,32,0,0" Grid.ColumnSpan="2" Grid.Row="1"/>
        </Grid>
    </Grid>
</Page>